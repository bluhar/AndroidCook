<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AuchanTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/bgActionBar</item>
        <!-- <item name="android:backgroundStacked">@color/bgActionBarActionMode</item> -->
        <!-- <item name="android:backgroundSplit">@drawable/bg_header_with_divider</item> -->
        <!-- <item name="android:actionBarItemBackground">@drawable/selector_action_item</item> -->
        <!-- <item name="android:icon">@drawable/ic_launcher</item> -->
        <!-- <item name="android:titleTextStyle">@style/XBTheme.ActionBarStyle.TitleTextStyle</item> -->
    </style>

    <style name="AuchanTheme.ActionBarStyle.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/textActionBar</item>
        <item name="android:textSize">@dimen/textSizeActionBar</item>
    </style>

    <style name="AuchanTheme.ActionBarOverflowStyle" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_select_all</item>
    </style>

</resources>