<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:paddingBottom="3dp"
    android:background="#ffffff"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
                <TextView
            android:id="@+id/leave_list_item_leaveType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="17sp"
            android:gravity="left" />

        <TextView
            android:id="@+id/leave_list_item_leaveCreateDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/leave_list_item_leaveType"
            android:layout_gravity="right"
            android:textColor="#969696"
            android:gravity="bottom" />

    </RelativeLayout>

    <TextView
        android:id="@+id/leave_list_item_leaveReason"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
            android:textSize="16sp"
        android:layout_width="match_parent"
            android:textColor="#5F6050"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/leave_list_item_leaveStartDateEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
            android:textSize="15sp"
            android:textColor="#5F6050"
         />

</LinearLayout>