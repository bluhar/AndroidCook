    <!-- Application theme. -->
    <!-- <style name="AppTheme" parent="AppBaseTheme"> -->
    <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    <!-- </style> -->

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="RightArrow">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/right_arrow</item>
        <item name="android:background">@null</item>
    </style>
    
    <style name="SettingLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>
    <style name="DividerSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="XBTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/bgActionBar</item>
<!--         <item name="android:backgroundStacked">@color/bgActionBarActionMode</item> -->
<!--         <item name="android:backgroundSplit">@drawable/bg_header_with_divider</item> -->
        <item name="android:actionBarItemBackground">@drawable/selector_action_item</item>
        <item name="android:icon">@drawable/ic_launcher</item>
        <item name="android:titleTextStyle">@style/XBTheme.ActionBarStyle.TitleTextStyle</item>
    </style>
    
    <style name="XBTheme.ActionBarStyle.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/textActionBar</item>
        <item name="android:textSize">@dimen/textSizeActionBar</item>
    </style>

</resources>